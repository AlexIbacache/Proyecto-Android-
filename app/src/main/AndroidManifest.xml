<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_sparepartsm"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_sparepartsm"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoAndroid"
        tools:targetApi="31">

        <!-- Actividad de Login (Lanzador de la App) -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad Principal (Contenedor de Fragmentos) -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />

        <!-- Actividad de Registro -->
        <activity
            android:name=".ui.register.RegistrarFormActivity"
            android:exported="false" />

        <!-- Actividad de Repuestos -->
        <activity
            android:name=".ui.repuesto.RepuestoActivity"
            android:exported="false" />

    </application>

</manifest>