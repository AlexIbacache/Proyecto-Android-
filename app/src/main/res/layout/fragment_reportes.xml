<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.reportes.ReportesFragment">

    <!-- Contenedor Superior -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTituloReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reportes de Reparaciones"
            android:textSize="22sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="16dp"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- CheckBox para Seleccionar Todas las Operativas -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_select_all_operative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="Seleccionar Todas las Operativas"
        app:layout_constraintTop_toBottomOf="@+id/topContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView para mostrar las Maquinarias -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReportes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_select_all_operative"
        app:layout_constraintBottom_toTopOf="@+id/fabExportarExcel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_reporte_maquinaria" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExportarExcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_menu_save"
        app:backgroundTint="#121212"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>