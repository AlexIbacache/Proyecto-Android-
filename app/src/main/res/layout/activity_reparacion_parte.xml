<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Partes de la Maquinaria"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerMaquinaria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:focusable="false"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/spinnerMaquinaria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etNotas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Notas (opcional)"
        android:minLines="2"
        android:maxLines="5"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/etFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvPartes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Partes de la maquinaria"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etNotas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <TableLayout
        android:id="@+id/tablePartes"
        android:layout_width="366dp"
        android:layout_height="218dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toTopOf="@id/btnGuardarParte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPartes"
        app:layout_constraintVertical_bias="0.0">

        <TableRow>

            <TextView
                android:id="@+id/tvMotor"
                android:layout_width="328dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Motor"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnMotor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ver repuestos motor"
                android:src="@android:drawable/ic_input_add" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvBrazo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Brazo"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnBrazo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ver repuestos brazo"
                android:src="@android:drawable/ic_input_add" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvBomba"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bomba"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnBomba"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ver repuestos bomba"
                android:src="@android:drawable/ic_input_add" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnGuardarParte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/black"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnVolverPR"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:contentDescription="Volver"
        android:backgroundTint="@color/black"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
