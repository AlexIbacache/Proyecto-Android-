<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imgEmailIcon"
        android:layout_width="92dp"
        android:layout_height="94dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Icono Email"
        android:src="@drawable/ic_correoicono" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar código de confirmación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ingresa el código de confirmación que enviamos a tu correo."
        android:textSize="15sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvReenviarCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenviar código."
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#05177E"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Código de confirmación"
        android:inputType="number"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnSiguienteCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Siguiente"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textStyle="bold"
        android:textColor="#05177E"
        android:layout_marginBottom="36dp"/>


    <TextView
        android:id="@+id/tvTieneCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Tienes una cuenta?"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvIniciarSesioncc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicia sesión"
        android:textColor="#05177E"
        android:textSize="15sp"
        android:textStyle="bold"/>
</LinearLayout>
