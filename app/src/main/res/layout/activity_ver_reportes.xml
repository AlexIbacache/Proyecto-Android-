<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloReporte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reportes de Reparaciones"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnVolverLM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloReporte">

        <TableLayout
            android:id="@+id/tableReportes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:stretchColumns="*">

            <!-- Fila encabezado -->
            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Fecha"
                    android:textStyle="bold" />

                <TextView
                    android:padding="8dp"
                    android:text="Maquinaria"
                    android:textStyle="bold" />

                <TextView
                    android:padding="8dp"
                    android:text="Parte"
                    android:textStyle="bold" />

                <TextView
                    android:padding="8dp"
                    android:text="Repuesto"
                    android:textStyle="bold" />

                <TextView
                    android:padding="8dp"
                    android:text="Cantidad"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Ejemplo fila 1 -->
            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="24/09/2025" />

                <TextView
                    android:padding="8dp"
                    android:text="Excavadora" />

                <TextView
                    android:padding="8dp"
                    android:text="Motor" />

                <TextView
                    android:padding="8dp"
                    android:text="Filtro de aire" />

                <TextView
                    android:padding="8dp"
                    android:text="2" />
            </TableRow>

            <!-- Ejemplo fila 2 -->
            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="23/09/2025" />

                <TextView
                    android:padding="8dp"
                    android:text="Bulldozer" />

                <TextView
                    android:padding="8dp"
                    android:text="Brazo" />

                <TextView
                    android:padding="8dp"
                    android:text="Cilindro hidrÃ¡ulico" />

                <TextView
                    android:padding="8dp"
                    android:text="1" />
            </TableRow>

            <!-- Ejemplo fila 3 -->
            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="22/09/2025" />

                <TextView
                    android:padding="8dp"
                    android:text="Cargador LHD" />

                <TextView
                    android:padding="8dp"
                    android:text="Bomba" />

                <TextView
                    android:padding="8dp"
                    android:text="Manguera" />

                <TextView
                    android:padding="8dp"
                    android:text="4" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverLM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:minHeight="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="#121212"
        app:elevation="4dp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnExportarExcel"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/black"
        android:text="Exportar a Excel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>