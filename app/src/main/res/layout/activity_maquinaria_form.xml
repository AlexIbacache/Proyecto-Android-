<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/etNombreMaquinaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la Maquinaria"
            android:inputType="textPersonName"
            android:importantForAutofill="yes"/>

        <EditText
            android:id="@+id/etNumeroIdentificador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número identificador"
            android:inputType="text"
            android:importantForAutofill="yes"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etFechaIngreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de ingreso (dd/mm/yyyy)"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:gravity="top"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnGuardarMaquinaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/btnVolverFM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Volver" />

    </LinearLayout>
</ScrollView>
