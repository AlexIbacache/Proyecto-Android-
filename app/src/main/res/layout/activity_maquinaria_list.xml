<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Maquinaria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".MaquinariaListActivity">

    <!-- Contenedor Horizontal para Spinner y Botón (envuelto en MaterialCardView para estilo consistente) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <Spinner
                android:id="@+id/spinnerMaquinarias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:dropDownSelector="@android:color/darker_gray"
                android:background="?attr/editTextBackground"
                android:entries="@array/maquinarias_array"
                tools:text="Selecciona una maquinaria..."
                tools:ignore="SpeakableTextPresentCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarMaquinaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:minHeight="48dp"
                android:text="Agregar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:backgroundTint="#121212"
                app:elevation="4dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Contenedor para RecyclerView (estilo Material con fondo sutil y scroll) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/btnVolverLM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMaquinarias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="16dp"
            android:scrollbars="vertical"
            tools:ignore="HardcodedSize,SpeakableTextPresentCheck"
            tools:itemCount="5"
            tools:listitem="@android:layout/simple_list_item_1" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Botón Volver (estilo Material consistente) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverLM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:minHeight="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="#121212"
        app:elevation="4dp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>