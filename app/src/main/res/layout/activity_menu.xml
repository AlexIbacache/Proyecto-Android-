<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    tools:context=".MenuActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MachineManagement"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Botón Agregar Maquinaria -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAgregarMaquina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agregar Maquinaria"
        android:textColor="#000000"
        android:backgroundTint="#FFC107"
        android:drawableStart="@drawable/ic_maquinaria"
        android:drawablePadding="12dp"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Botón Agregar Repuesto -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAgregarRepuesto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFC107"
        android:drawableStart="@drawable/ic_repuesto"
        android:drawablePadding="12dp"
        android:elevation="4dp"
        android:padding="16dp"
        android:text="Reparacion"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAgregarMaquina" />

    <!-- Botón Ver Listas -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerListas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Listas"
        android:textColor="#000000"
        android:backgroundTint="#FFC107"
        android:drawableStart="@drawable/ic_lista"
        android:drawablePadding="12dp"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAgregarRepuesto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/fabAgregarRepuesto"/>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarRepuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#FFC107"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>