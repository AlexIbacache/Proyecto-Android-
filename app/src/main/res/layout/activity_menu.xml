<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#ECEFF1"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textSize="24sp"
        android:textColor="#263238"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMaquinaria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Maquinaria"
        app:icon="@drawable/ic_maquina"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReparacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Reparación"
        app:icon="@drawable/ic_repuesto"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnMaquinaria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReporte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Reportes"
        app:icon="@drawable/ic_lista"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnReparacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="240dp"
        android:layout_height="253dp"
        android:contentDescription="Logo"
        android:src="@drawable/ic_sparepartsm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#B0BEC5"
        android:minWidth="72dp"
        android:minHeight="36dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Cerrar Sesion"
        android:textAllCaps="false"
        android:textColor="#263238"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
